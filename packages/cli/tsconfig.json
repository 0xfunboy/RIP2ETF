{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts","src/**/*.tsx","index.ts","bin/**/*.ts","scripts/**/*.ts"],
  "exclude": ["node_modules","dist","build","**/*.test.ts","**/__tests__/**"]
}
